{
  "manifest_version": 3,
  "name": "regex-text-search",
  "version": "1.0",

  "description": "Allows regex search functionality on all webpages.",

  "icons": {
    "48": "icon48.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"]
    }
  ],
  "permissions": [
    "activeTab"
  ],

  "action": {
    "default_icon": "icon48.png",
    "default_title": "regex-search",
    "default_popup": "popup/main.html"
  }
}
