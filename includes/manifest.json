{
  "manifest_version": 3,
  "name": "regex-text-search",
  "version": "1.0",

  "description": "Allows regex search functionality on all webpages.",

  "icons": {
    "48": "icon48.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [ "./lib/highlight_replacement.js", "./lib/message_protocol.js", "./lib/re_search.js"]
    }
  ],

  "permissions": [
    "activeTab"
  ],

  "browser_specific_settings": {
    "gecko": {
      "id": "@li-regex-searcher",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },

  "action": {
    "default_icon": "icon48.png",
    "default_title": "regex-search",
    "default_popup": "./popup/index.html"
  }
}
